<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankManagerApp.Views.RegisterPage"
             Title="ثبت‌نام"
             BackgroundColor="White">
    
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
            
            <!-- Logo/Title -->
            <Label Text="✨" FontSize="60" HorizontalOptions="Center"/>
            <Label Text="ثبت‌نام در نمکدون" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#333"/>
            <Label Text="ایجاد حساب کاربری جدید" FontSize="14" HorizontalOptions="Center" TextColor="#888" Margin="0,0,0,20"/>
            
            <!-- Email Input -->
            <Border StrokeShape="RoundRectangle 10" Stroke="#DDD" StrokeThickness="1" BackgroundColor="White">
                <Entry x:Name="EmailEntry" 
                       Placeholder="ایمیل" 
                       Keyboard="Email"
                       TextColor="#333"
                       PlaceholderColor="#999"
                       Margin="10,5"/>
            </Border>
            
            <!-- Username Input -->
            <Border StrokeShape="RoundRectangle 10" Stroke="#DDD" StrokeThickness="1" BackgroundColor="White">
                <Entry x:Name="UsernameEntry" 
                       Placeholder="نام کاربری (فقط حروف انگلیسی و اعداد)" 
                       TextColor="#333"
                       PlaceholderColor="#999"
                       Margin="10,5"/>
            </Border>
            
            <!-- Password Input -->
            <Border StrokeShape="RoundRectangle 10" Stroke="#DDD" StrokeThickness="1" BackgroundColor="White">
                <Entry x:Name="PasswordEntry" 
                       Placeholder="رمز عبور (حداقل 6 کاراکتر)" 
                       IsPassword="True"
                       TextColor="#333"
                       PlaceholderColor="#999"
                       Margin="10,5"/>
            </Border>
            
            <!-- Confirm Password Input -->
            <Border StrokeShape="RoundRectangle 10" Stroke="#DDD" StrokeThickness="1" BackgroundColor="White">
                <Entry x:Name="ConfirmPasswordEntry" 
                       Placeholder="تکرار رمز عبور" 
                       IsPassword="True"
                       TextColor="#333"
                       PlaceholderColor="#999"
                       Margin="10,5"/>
            </Border>
            
            <!-- Register Button -->
            <Button x:Name="RegisterButton"
                    Text="ثبت‌نام"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="16"
                    CornerRadius="10"
                    HeightRequest="50"
                    Clicked="OnRegisterClicked"
                    Margin="0,10,0,0"/>
            
            <!-- Login Link -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,20,0,0">
                <Label Text="قبلاً ثبت‌نام کرده‌اید؟" FontSize="14" TextColor="#666"/>
                <Label Text="ورود" FontSize="14" TextColor="#512BD4" FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLoginTapped"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
