<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankManagerApp.Views.MainPage"
             Title="My Accounts"
             FlowDirection="LeftToRight">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        
        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,20">
            <HorizontalStackLayout Spacing="10" HorizontalOptions="FillAndExpand">
                <Label x:Name="WelcomeLabel"
                       Text="Welcome" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       HorizontalOptions="StartAndExpand"/>
                
                <Button Text="Logout"
                        Clicked="OnLogoutClicked"
                        BackgroundColor="{StaticResource Gray300}"
                        TextColor="{StaticResource Gray900}"
                        FontSize="14"
                        Padding="15,8"
                        CornerRadius="10"/>
            </HorizontalStackLayout>
            
            <Label Text="Your Bank Accounts" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   Margin="0,10,0,0"/>
        </VerticalStackLayout>

        <!-- Accounts List -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout x:Name="AccountsList" Spacing="15"/>
        </ScrollView>

        <!-- Create Account Button -->
        <Button Grid.Row="2"
                Text="âž• Create New Account"
                Clicked="OnCreateAccountClicked"
                FontSize="18"
                FontAttributes="Bold"
                Padding="15"
                CornerRadius="15"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                Margin="0,20,0,0"/>
    </Grid>
</ContentPage>
