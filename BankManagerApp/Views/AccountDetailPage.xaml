<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankManagerApp.Views.AccountDetailPage"
             Title="Account Details"
             FlowDirection="LeftToRight">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Account Info Card -->
            <Border Padding="25" 
                   StrokeShape="RoundRectangle 20"
                   StrokeThickness="0"
                   BackgroundColor="{StaticResource Primary}"
                   Shadow="{Shadow Brush=Black, Offset='0,2', Radius=5, Opacity=0.2}">
                <VerticalStackLayout Spacing="10">
                    <Label x:Name="AccountNameLabel"
                           Text="Checking Account" 
                           FontSize="26"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    
                    <BoxView HeightRequest="1" 
                             Color="White" 
                             Opacity="0.3"
                             Margin="0,10"/>
                    
                    <Label Text="Current Balance"
                           FontSize="14"
                           TextColor="White"
                           Opacity="0.9"
                           HorizontalOptions="Center"/>
                    
                    <Label x:Name="BalanceLabel"
                           Text="0 Toman" 
                           FontSize="36"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>

            <!-- Transaction Form Card -->
            <Border Padding="20" 
                   StrokeShape="RoundRectangle 15"
                   StrokeThickness="0"
                   BackgroundColor="{StaticResource White}"
                   Shadow="{Shadow Brush=Black, Offset='0,2', Radius=5, Opacity=0.1}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="ðŸ’¸ Transaction"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"/>
                    
                    <Entry x:Name="AmountEntry"
                           Placeholder="Amount (Toman)"
                           Keyboard="Numeric"
                           FontSize="18"/>
                    
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <Button Grid.Column="0"
                                Text="ðŸ’° Deposit"
                                Clicked="OnDepositClicked"
                                BackgroundColor="#4CAF50"
                                TextColor="White"
                                FontSize="16"
                                FontAttributes="Bold"
                                Padding="12"
                                CornerRadius="10"/>
                        
                        <Button Grid.Column="1"
                                Text="ðŸ’µ Withdraw"
                                Clicked="OnWithdrawClicked"
                                BackgroundColor="#FF5722"
                                TextColor="White"
                                FontSize="16"
                                FontAttributes="Bold"
                                Padding="12"
                                CornerRadius="10"/>
                    </Grid>
                    
                    <!-- Status Message -->
                    <Label x:Name="StatusLabel"
                           FontSize="14"
                           HorizontalOptions="Center"
                           Margin="0,5,0,0"/>
                </VerticalStackLayout>
            </Border>

            <!-- Transaction History -->
            <Border Padding="20" 
                   StrokeShape="RoundRectangle 15"
                   StrokeThickness="0"
                   BackgroundColor="{StaticResource White}"
                   Shadow="{Shadow Brush=Black, Offset='0,2', Radius=5, Opacity=0.1}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="ðŸ“‹ Transaction History"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"/>
                    
                    <VerticalStackLayout x:Name="TransactionsList" Spacing="10"/>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
